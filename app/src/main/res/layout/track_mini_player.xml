<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp"
    android:background="@color/lightTheme">

    <LinearLayout
        android:id="@+id/llmain"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/trackMPImage"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/img_ws" />

        <LinearLayout
            android:layout_marginStart="10dp"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/trackMPName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Track Name"
                android:maxLines="1"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:fontFamily="@font/mulish_medium"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/trackMPArtistName"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Artist Name"
                android:textColor="#e5e5e5"
                android:fontFamily="@font/mulish_medium"
                android:textSize="11sp" />

        </LinearLayout>

        <ImageView
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/shuffle"
            app:tint="#FFFFFF"/>

        <ImageView
            android:id="@+id/btnPlayPause"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/play_track"
            app:tint="#FFFFFF"/>

    </LinearLayout>

    <com.google.android.material.progressindicator.LinearProgressIndicator
        android:id="@+id/trackProgressIndicator"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignBottom="@id/llmain"
        app:trackThickness="1.5dp"
        app:trackColor="@color/lightTheme"
        app:indicatorColor="#e5e5e5"
        app:trackStopIndicatorSize="0.2dp"
        android:progress="0"/>

</RelativeLayout>